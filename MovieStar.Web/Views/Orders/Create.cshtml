@model MovieStar.Web.Models.CreateOrderViewModel

@{
    ViewData["Title"] = "Create Order";
}

<h2>Create Order</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>DVD Quantity</label>
        <input asp-for="QuantityDVD" type="number" class="form-control" />
        <span asp-validation-for="QuantityDVD" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Blu-ray Quantity</label>
        <input asp-for="QuantityBluRay" type="number" class="form-control" />
        <span asp-validation-for="QuantityBluRay" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit Order</button>
</form>

@if (!ViewData.ModelState.IsValid)
{
    <div class="text-danger">
        <ul>
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
    </div>
}
